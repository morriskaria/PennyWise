// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String
  password  String     // Will hash this before saving
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations
  accounts      Account[]
  transactions  Transaction[]
  categories    Category[]
  budgets       Budget[]

  @@index([email])
}

model Account {
  id        String     @id @default(cuid())
  userId    String
  name      String     // "Checking", "Savings", etc.
  type      String     // "checking", "savings", "credit", "investment"
  balance   Decimal    @default(0) @db.Decimal(10, 2)
  currency  String     @default("USD")
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]

  @@index([userId])
  @@index([type])
}

model Category {
  id        String     @id @default(cuid())
  userId    String
  name      String     // "Groceries", "Gas", "Entertainment"
  color     String     @default("#3B82F6") // Hex color
  icon      String     @default("tag") // Icon name
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]
  budgets       Budget[]

  @@unique([userId, name])
  @@index([userId])
}

model Transaction {
  id          String     @id @default(cuid())
  userId      String
  accountId   String
  categoryId  String
  amount      Decimal    @db.Decimal(10, 2)
  type        String     // "income", "expense", "transfer"
  description String?
  date        DateTime
  isRecurring Boolean    @default(false)
  frequency   String?    // "daily", "weekly", "monthly", "yearly"
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  account   Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category  Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([accountId])
  @@index([categoryId])
  @@index([date])
  @@index([type])
}

model Budget {
  id        String     @id @default(cuid())
  userId    String
  categoryId String
  limit     Decimal    @db.Decimal(10, 2)
  period    String     @default("monthly") // "monthly", "yearly"
  month     Int        // 1-12 for monthly, 1 for yearly
  year      Int
  spent     Decimal    @default(0) @db.Decimal(10, 2)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId, month, year])
  @@index([userId])
  @@index([categoryId])
}
